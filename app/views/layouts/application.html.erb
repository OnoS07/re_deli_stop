<!DOCTYPE html>
<html>
  <head>
    <title>ReDeli</title>
    <meta charset="utf-8">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <script src="https://kit.fontawesome.com/5a4c917e19.js" crossorigin="anonymous"></script>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>
  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-white bg-white fixed-top">
        <div class="container">
          <%= link_to root_path ,class:"navbar-brand", data: {"turbolinks" => false} do %>
              <i class="fas fa-utensils fa-2x" style="color: orange;">
              <span style="font-family: impact">Re:Deli</span></i><% end %>
          <ul class="nav">
          <% if user_signed_in? %>
            <li class="nav-item">
              <%= link_to posts_path, class:"nav-link" do %>
              投稿一覧 <% end %>
            </li>
            <li class="nav-item">
              <%= link_to new_post_path, class:"nav-link", data: {"turbolinks" => false} do %>
              新規投稿 <% end %>
            </li>
            <li class="nav-item">
              <%= link_to user_path(current_user), class:"nav-link" do %>
              マイページ <% end %>
            </li>
            <li class="nav-item">
              <%= link_to destroy_user_session_path, method: :delete , class:"nav-link" do %>
              ログアウト<% end %>
            </li>

          <% else %>
            <li class="nav-item">
              <%= link_to new_user_registration_path ,class:"nav-link" do %>
              新規登録 <% end %>
            </li>
            <li class="nav-item">
              <%= link_to new_user_session_path ,class:"nav-link" do %>
              ログイン <% end %>
            </li>
            <li class="nav-item">
              <%= link_to destroy_user_session_path, method: :delete , class:"nav-link" do %>
              ログアウト<% end %>
            </li>
            <% end %>
          </ul>
        </div>

      </nav>
    </header>
    <div class="container">
    <%= yield %>
    </div>
    <footer>
      <div class="container">
        <i class="fas fa-utensils" style="color: orange;">
        <span style="font-family: impact">Re:Deli</span></i>
        <p class="top-btn">Go Top</p>
      </div>
    </footer>
  </body>
</html>
