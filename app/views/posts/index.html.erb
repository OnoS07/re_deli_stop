<div class="container">
	<div class="row">
		<div class="col-lg-12">
			<section class="post-contents">
				<% @posts.each do |post| %>
				<div class="post-content flex">
					<div class="post-image">
						<%= attachment_image_tag post, :post_image,
							format:"jpg", class:"image" %>
					</div>
					<div class="post-main flex">
						<div class="post-profile">
							<%= link_to user_path(post.user) do %>
							<%= attachment_image_tag post.user, :profile_image, format:"jpg",
								size:"100x100",fallback:"no_image.jpg",
								style:"border-radius:50%;" %>
							<% end %>
						</div>
						<div class="post-text">
							<%= link_to post_path(post) do %>
							<i class="fas fa-paw fa-2x"><%= post.title %></i> <% end %><br>
							<div class="post-body">
								<%= post.body%>
							</div>
						</div>
					</div>
				</div>
				<% end %>
			</section>
		</div>
	</div>
</div>