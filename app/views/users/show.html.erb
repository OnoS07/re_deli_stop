<div class="container">
	<div class="row">
		<div class="col-lg-12">
			<% if flash[:notice] %>
			 	<div class="flash"><%= flash[:notice]%></div>
			<% end %>
			<section>
					<div class="profile-main">
						<div class="profile-image">
							<%= attachment_image_tag @user, :profile_image, format:"jpg", size:"200x200",fallback:"no_image.jpg", style:"border-radius:50%;" %><br>
							<% if @user == current_user %>
								<%= link_to edit_user_path(@user), data: {"turbolinks" => false} do %>
								<i class="far fa-edit",
									style="padding-right: 5px; margin-top:10px">編集
								</i><% end %>
							<% end %>
						</div>
						<div class="profile-text">
							<i class="fas fa-dog fa-2x"><%= @user.name %></i><br>
							<div class="post-body">
								<%= @user.introduction %>
							</div>
						</div>
					</div>
		    </section>

			<section class="post-contents">
				<% @posts.each do |post| %>
				<div class="post-content flex">
					<div class="post-image">
						<%= link_to post_path(post) do %>
						<%= attachment_image_tag post, :post_image,
							format:"jpg", class:"image" %>
						<% end %>
					</div>
					<div class="post-main flex">
						<div class="post-text">
							<%= link_to post_path(post) do %>
							<i class="fas fa-paw fa-2x"><%= post.title %></i> <% end %><br>
							<div class="post-body">
								<%= post.body%>
							</div>
						</div>
						<div class="post-profile">
							<div style="float: right; margin-top: 10px">
								comments:""件<br>
								<%= post.created_at.strftime('%Y/%m/%d') %>
							</div>
						</div>
					</div>
				</div>
				<% end %>
			</section>
		</div>
	</div>
</div>